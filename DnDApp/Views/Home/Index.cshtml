
<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/myApp.js"></script>
    <script src="~/Scripts/draganddrop.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container" ng-controller="MainCtrl">
        <br />
        <br />
        <br />
        <div class="row">
            <h2>List A</h2>
            <div class="col-xs-4">
                <ul id="listA">
                    <li ui-draggable="true" drag="aData"
                        on-drop-success="dropSuccessHandler('listA')"
                        ng-repeat="aData in list1 track by $index">
                        {{aData.name}}
                    </li>
                </ul>
            </div>
            <div class="col-xs-4">
                <h2>List B</h2>
                <ul id="listB">
                    <li ui-draggable="true" drag="bData"
                        on-drop-success="dropSuccessHandler('listB')"
                        ng-repeat="bData in list2 track by $index">
                        {{bData.name}}
                    </li>
                </ul>
            </div>
            <div class="col-xs-4">
                <h2>List C</h2>
                <ul>
                    <li ng-repeat="cData in list3 track by $index">
                        {{cData.name}}
                    </li>
                </ul>
            </div>
        </div>

        <div style="border:1px solid red;height:150px">
            <table border="1">
                <tr>
                    <th ui-on-drop="onDrop1($data)" width="200px" height="50px">{{col1}}</th>
                    <th ui-on-drop="onDrop2($data)" width="200px" height="50px">{{col2}}</th>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
